@model IEnumerable<E_learning_portal.Models.MyModels.Task>
@{
    ViewBag.Title = "Tasks";
}

<h2>Task</h2>
@Html.ActionLink("Добавить", "Create")
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Subject)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Course)
        </th>
    </tr>

    @foreach (var item in Model)
    {
        if (item.TeacherId == item.Teacher.TeacherId)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Subject)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Course)
                </td>
                <td>
                    @Html.ActionLink("Редактировать", "Edit", new { id = item.TaskId }) |
                    @Html.ActionLink("Детали", "TeacherTaskDetails", new { id = item.TaskId }) |
                    @Html.ActionLink("Удалить", "Delete", new { id = item.TaskId })
                </td>
            </tr>
        }
    }
</table>

