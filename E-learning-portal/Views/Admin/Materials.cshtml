@model IEnumerable<E_learning_portal.Models.MyModels.Material>

@{
    ViewBag.Title = "Материалы";
}

<h2>Материалы</h2>

<p>
    @Html.ActionLink("Создать", "Create", "Admin")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Subject)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Course)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Department)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Faculty)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Subject)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Course)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Department)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Faculty)
        </td>
        <td>
            @Html.ActionLink("Редактировать", "Edit", new { id=item.MaterialId }) |
            @Html.ActionLink("Детали", "Details", new { id=item.MaterialId }) |
            @Html.ActionLink("Удалить", "Delete", new { id=item.MaterialId })
        </td>
    </tr>
}

</table>
