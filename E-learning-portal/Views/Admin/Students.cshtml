@model IEnumerable<E_learning_portal.Models.MyModels.Student>

@{
    ViewBag.Title = "Студенты";
}

<h2>Студенты</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Surname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Surname)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.ActionLink("Редактировать", "SEdit", new { id = item.StudentId })
            @Html.ActionLink("Удалить", "SDelete", new { id = item.StudentId })
        </td>
    </tr>
}

</table>
