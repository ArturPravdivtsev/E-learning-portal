@model IEnumerable<E_learning_portal.Models.MyModels.Classbook>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Создать", "CourseCreate")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Course)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Course)
        </td>
        <td>
            @Html.ActionLink("Редактировать", "CourseEdit", new { id=item.ClassbookId }) |
            @Html.ActionLink("Далее", "CourseDetails", new { id=item.ClassbookId }) |
            @Html.ActionLink("Удалить", "CourseDelete", new { id=item.ClassbookId })
        </td>
    </tr>
}

</table>
