@model IEnumerable<E_learning_portal.Models.MyModels.Material>
@{
    ViewBag.Title = "Материалы";
}
<div class="w3-teal" style="width:25px; margin-top:25px; ">
    <button class="w3-button w3-teal w3-xlarge" onclick="w3_open()">☰</button>
</div>
<div class="w3-sidebar w3-bar-block w3-border-right" style="display:none; margin-top:25px;" id="mySidebar">
    <button onclick="w3_close()" class="w3-bar-item w3-large">Close &times;</button>
    <a href="#" class="w3-bar-item w3-button">@Html.ActionLink("Материал", "Material", "Material")</a>
    <a href="#" class="w3-bar-item w3-button">@Html.ActionLink("Задание", "Index", "Task")</a>
    <a href="#" class="w3-bar-item w3-button">@Html.ActionLink("Журнал", "Index", "Classbook")</a>
</div>
<h2>Материал</h2>
@Html.ActionLink("Добавить", "Create")
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Subject)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Course)
        </th>
    </tr>

    @foreach (var item in Model)
    {
        if (item.TeacherId == item.Teacher.TeacherId)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Subject)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Course)
                </td>
                <td>
                    @Html.ActionLink("Редактировать", "Edit", new { id = item.MaterialId }) |
                    @Html.ActionLink("Детали", "TeacherMaterialDetails", new { id = item.MaterialId }) |
                    @Html.ActionLink("Удалить", "Delete", new { id = item.MaterialId })
                </td>
            </tr>
        }
    }
</table>
