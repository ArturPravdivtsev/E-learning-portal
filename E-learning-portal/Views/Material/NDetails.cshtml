@model IEnumerable<Kyrsach.Models.My_Models.Material>

@{
    ViewBag.Title = "Список материалов";
}

<h2>Список материалов</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td> |
            @Html.ActionLink("Далее", "Details", new { id=item.MaterialId }) |
        </td>
    </tr>
}

</table>

